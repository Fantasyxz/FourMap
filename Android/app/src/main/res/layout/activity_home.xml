<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/union_6"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/judul_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="My Schedule"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/judul_home"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/judul_home"
        app:layout_constraintLeft_toRightOf="@+id/first" />

    <Button
        android:id="@+id/third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Later"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/judul_home"
        app:layout_constraintLeft_toRightOf="@+id/second" />

    <HorizontalScrollView
        android:id="@+id/jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/first"
        app:layout_constraintLeft_toLeftOf="parent">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/firstday">


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/secondday">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/thirdday">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/fourthday">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/fiveday">

        </RelativeLayout>

    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/rectangle_89"
        app:layout_constraintTop_toBottomOf="@id/jadwal"
        app:layout_constraintLeft_toLeftOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>